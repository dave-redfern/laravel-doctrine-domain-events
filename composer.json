{
    "name": "somnambulist/laravel-doctrine-domain-events",
    "type": "library",
    "description": "Adds domain events to Doctrine entities.",
    "keywords": [
        "doctrine",
        "laravel",
        "laravel-doctrine",
        "validation",
        "domain events"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Dave Redfern",
            "email": "dave@scorpioframework.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Somnambulist\\DomainEvents\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Somnambulist\\Tests\\DomainEvents\\": "tests/",
            "Events\\": "tests/_data/Events"
        },
        "classmap": [
            "tests/_data/"
        ],
        "files": [
            "tests/_data/helpers.php"
        ]
    },
    "require": {
        "php": ">=5.6.0",
        "ext-bcmath" : "*",
        "illuminate/validation": "~5.2",
        "laravel-doctrine/orm": "1.*",
        "somnambulist/laravel-domain-input-mapper": "~0.5"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.4",
        "illuminate/config": "~5.2",
        "symfony/var-dumper": "~2.8"
    }
}
